<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox spacing="20.0" styleClass="main-container" stylesheets="@../css/application.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="accounting.controller.InventoryController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <!-- Header -->
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <FontIcon iconLiteral="fa-archive" iconSize="28" styleClass="text-primary" />
            <Label styleClass="title-lg" text="لوحة مراقبة المخزون" />
         </children>
      </HBox>

      <!-- Filter and Actions Bar -->
      <HBox styleClass="filter-bar" alignment="CENTER_LEFT" spacing="15.0">
         <children>
            <FontIcon iconLiteral="fa-search" />
            <TextField fx:id="searchField" promptText="بحث عن محصول..." HBox.hgrow="ALWAYS" />
            <Button fx:id="addAdjustmentButton" onAction="#handleAddAdjustment" text="تسوية مخزون" />
            <Button fx:id="refreshButton" onAction="#handleRefresh" styleClass="icon-button">
               <graphic>
                  <FontIcon iconLiteral="fa-refresh" />
               </graphic>
            </Button>
         </children>
      </HBox>

      <!-- Inventory Cards -->
      <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
         <content>
            <FlowPane fx:id="inventoryFlowPane" hgap="20" vgap="20" />
         </content>
      </ScrollPane>

      <!-- Footer Summary -->
      <HBox styleClass="total-row-final" alignment="CENTER_RIGHT">
         <children>
            <Label fx:id="totalInventoryValueLabel" styleClass="total-value" text="إجمالي قيمة المخزون: 0.00" />
         </children>
      </HBox>
   </children>
</VBox>
