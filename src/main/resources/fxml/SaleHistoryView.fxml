<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox spacing="20.0" styleClass="main-container" stylesheets="@../css/application.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="accounting.controller.SaleHistoryController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <!-- Header -->
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <FontIcon iconLiteral="fa-shopping-cart" iconSize="28" styleClass="text-primary" />
            <Label styleClass="title-lg" text="سجل المبيعات" />
         </children>
      </HBox>

      <!-- Toolbar -->
      <VBox styleClass="card">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <FontIcon iconLiteral="fa-search" />
                  <TextField fx:id="searchField" promptText="بحث برقم الفاتورة..." />
                  <DatePicker fx:id="fromDate" promptText="من تاريخ" />
                  <DatePicker fx:id="toDate" promptText="إلى تاريخ" />
                  <ComboBox fx:id="customerFilterComboBox" prefWidth="180.0" promptText="فلترة بالعميل" />
                  <ComboBox fx:id="cropFilterComboBox" prefWidth="180.0" promptText="فلترة بالمحصول" />
                  <Button fx:id="filterButton" onAction="#applyFilters" text="بحث" />
                  <Button fx:id="clearFilterButton" onAction="#clearFilters" styleClass="secondary" text="مسح" />
                  <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                     <Button fx:id="newSaleButton" onAction="#handleNewSale" styleClass="success" text="فاتورة بيع جديدة">
                        <graphic>
                           <FontIcon iconLiteral="fa-plus" />
                        </graphic>
                     </Button>
                  </HBox>
               </children>
            </HBox>
         </children>
      </VBox>

      <!-- Table -->
      <TableView fx:id="salesTable" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="dateColumn" prefWidth="120.0" text="التاريخ" />
            <TableColumn fx:id="invoiceNumberColumn" prefWidth="120.0" text="رقم الفاتورة" />
            <TableColumn fx:id="customerColumn" prefWidth="200.0" text="العميل" />
            <TableColumn fx:id="cropColumn" prefWidth="150.0" text="المحصول" />
            <TableColumn fx:id="sellingUnitPriceColumn" prefWidth="120.0" text="سعر البيع" />
            <TableColumn fx:id="totalAmountColumn" prefWidth="120.0" text="الإجمالي" />
            <TableColumn fx:id="amountPaidColumn" prefWidth="120.0" text="المدفوع" />
            <TableColumn fx:id="balanceColumn" prefWidth="120.0" text="المتبقي" />
            <TableColumn fx:id="statusColumn" prefWidth="100.0" text="الحالة" />
            <TableColumn fx:id="actionsColumn" prefWidth="200.0" text="إجراءات" />
         </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>

      <!-- Footer Summary -->
      <HBox styleClass="total-row-final" alignment="CENTER_RIGHT" spacing="20">
         <children>
            <Label fx:id="totalSalesLabel" styleClass="total-value" text="إجمالي المبيعات: 0.00" />
            <Label fx:id="totalPaidLabel" styleClass="total-value, success-text" text="إجمالي المدفوع: 0.00" />
            <Label fx:id="totalBalanceLabel" styleClass="total-value, danger-text" text="إجمالي المتبقي: 0.00" />
         </children>
      </HBox>

   </children>
</VBox>