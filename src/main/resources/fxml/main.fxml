<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane fx:id="mainBorderPane" prefHeight="800.0" prefWidth="1280.0" styleClass="main-container" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="accounting.controller.MainController">
   <right>
      <VBox fx:id="sideNavigationBar" alignment="TOP_CENTER" prefWidth="240.0" styleClass="sidebar">
         <children>
            <VBox alignment="CENTER" styleClass="sidebar-header">
                <Label styleClass="sidebar-title" text="محاسبة" />
                <Label styleClass="sidebar-subtitle" text="للمزارع الحديثة" />
            </VBox>

            <VBox styleClass="sidebar-menu" VBox.vgrow="ALWAYS">
                <Button fx:id="dashboardBtn" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" onAction="#showDashboard" text="لوحة التحكم" styleClass="sidebar-button, active">
                    <graphic><FontIcon iconLiteral="fa-home" /></graphic>
                </Button>

                <Label styleClass="menu-header" text="العمليات"/>
                <Button fx:id="saleHistoryBtn" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" onAction="#showSaleHistory" text="المبيعات" styleClass="sidebar-button">
                    <graphic><FontIcon iconLiteral="fa-shopping-cart" /></graphic>
                </Button>
                <Button fx:id="purchaseHistoryBtn" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" onAction="#showPurchaseHistory" text="المشتريات" styleClass="sidebar-button">
                    <graphic><FontIcon iconLiteral="fa-truck" /></graphic>
                </Button>
                <Button fx:id="expenseBtn" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" onAction="#handleShowExpenseForm" text="المصروفات" styleClass="sidebar-button">
                    <graphic><FontIcon iconLiteral="fa-money" /></graphic>
                </Button>

                <Label styleClass="menu-header" text="البيانات"/>
                <Button fx:id="inventoryBtn" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" onAction="#showInventory" text="المخزون" styleClass="sidebar-button">
                    <graphic><FontIcon iconLiteral="fa-archive" /></graphic>
                </Button>
                <Button fx:id="contactsBtn" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" onAction="#handleManageContacts" text="جهات التعامل" styleClass="sidebar-button">
                    <graphic><FontIcon iconLiteral="fa-users" /></graphic>
                </Button>
                <Button fx:id="cropManagementBtn" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" onAction="#showCropManagement" text="المحاصيل" styleClass="sidebar-button">
                    <graphic><FontIcon iconLiteral="fa-leaf" /></graphic>
                </Button>
                 <Button fx:id="financialAccountManagementBtn" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" onAction="#showFinancialAccountManagement" text="الحسابات" styleClass="sidebar-button">
                           <graphic><FontIcon iconLiteral="fa-bank" /></graphic>
                        </Button>

                <Label styleClass="menu-header" text="التحليل"/>
                <Button fx:id="reportsMenuBtn" alignment="BASELINE_LEFT" graphicTextGap="15.0" mnemonicParsing="false" onAction="#showReportsDashboard" text="التقارير" styleClass="sidebar-button">
                    <graphic><FontIcon iconLiteral="fa-bar-chart" /></graphic>
                </Button>

            </VBox>

            <Separator styleClass="sidebar-separator" />
            <Button fx:id="settingsBtn" alignment="BASELINE_LEFT" graphicTextGap="15.0" text="الإعدادات" styleClass="sidebar-button">
               <graphic>
                  <FontIcon iconLiteral="fa-cogs" />
               </graphic>
            </Button>
         </children>
      </VBox>
   </right>
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="65.0" styleClass="header-bar">
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
               <children>
                  <Label fx:id="viewTitleLabel" styleClass="header-title" text="لوحة التحكم" />
                  <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                     <children>
                        <Label fx:id="dateTimeLabel" styleClass="text-secondary" text="DATE_TIME" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            <StackPane fx:id="contentArea" VBox.vgrow="ALWAYS" style="-fx-padding: 25;" />
         </children>
      </VBox>
   </center>
</BorderPane>
