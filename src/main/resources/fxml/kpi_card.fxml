<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.AreaChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox styleClass="kpi-glass-pane" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="15.0">
         <children>
            <VBox styleClass="kpi-icon-container">
                <FontIcon fx:id="kpiIcon" iconLiteral="fa-question-circle" />
            </VBox>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="kpiTitleLabel" styleClass="kpi-title" text="عنوان المؤشر" />
                  <Label fx:id="kpiValueLabel" styleClass="kpi-value" text="0.00" />
               </children>
            </VBox>
         </children>
      </HBox>
      <AreaChart fx:id="sparklineChart" styleClass="kpi-sparkline" prefHeight="60.0" animated="false" legendVisible="false">
         <xAxis>
            <CategoryAxis side="BOTTOM" styleClass="kpi-sparkline-axis" />
         </xAxis>
         <yAxis>
            <NumberAxis side="LEFT" styleClass="kpi-sparkline-axis" />
         </yAxis>
      </AreaChart>
   </children>
</VBox>