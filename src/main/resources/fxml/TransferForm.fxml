<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="accounting.controller.TransferFormController">
    <children>
        <GridPane hgap="10" vgap="10">
            <children>
                <Label text="From Account" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <ComboBox fx:id="fromAccountComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="To Account" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <ComboBox fx:id="toAccountComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Amount" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="amountField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="Date" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </children>
        </GridPane>
        <HBox alignment="CENTER" spacing="10">
            <children>
                <Button onAction="#handleOk" text="OK" />
                <Button onAction="#handleCancel" text="Cancel" />
            </children>
        </HBox>
    </children>
</VBox>
