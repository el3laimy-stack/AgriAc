<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox spacing="10" stylesheets="@../css/application.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="accounting.controller.PurchaseHistoryController">
    <children>
        <Label styleClass="title-lg" text="سجل المشتريات" />
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="فلترة حسب المحصول:" />
                <ComboBox fx:id="cropFilterComboBox" prefWidth="200.0" />
                <Region HBox.hgrow="ALWAYS" />
                <Button fx:id="newPurchaseButton" onAction="#handleNewPurchase" styleClass="success" text="إضافة فاتورة شراء">
                    <graphic>
                        <FontIcon iconLiteral="fa-plus" />
                    </graphic>
                </Button>
            </children>
        </HBox>
        <TableView fx:id="purchasesTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="dateColumn" prefWidth="100.0" text="التاريخ" />
                <TableColumn fx:id="invoiceNumberColumn" prefWidth="150.0" text="رقم الفاتورة" />
                <TableColumn fx:id="vendorColumn" prefWidth="200.0" text="المورد" />
                <TableColumn fx:id="amountColumn" prefWidth="120.0" text="المبلغ" />
                <TableColumn fx:id="statusColumn" prefWidth="100.0" text="الحالة" />
                <TableColumn fx:id="actionsColumn" prefWidth="150.0" text="إجراءات" />
            </columns>
        </TableView>
    </children>
</VBox>
