<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ComboBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" styleClass="main-container" stylesheets="@../css/application.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="accounting.controller.SeasonManagementController">
    <children>
        <VBox spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <Label styleClass="title" text="إدارة المواسم الزراعية" />
                
                <TableView fx:id="seasonsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="nameColumn" prefWidth="250.0" text="اسم الموسم" />
                        <TableColumn fx:id="startDateColumn" prefWidth="150.0" text="تاريخ البدء" />
                        <TableColumn fx:id="endDateColumn" prefWidth="150.0" text="تاريخ الانتهاء" />
                        <TableColumn fx:id="statusColumn" prefWidth="120.0" text="الحالة" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <GridPane fx:id="formGrid" hgap="10" vgap="10" styleClass="form-grid">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10" />
                    </padding>
                    <Label text="اسم الموسم:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                    <Label text="تاريخ البدء:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <DatePicker fx:id="startDatePicker" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                    <Label text="تاريخ الانتهاء:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <DatePicker fx:id="endDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                    <Label text="الحالة:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                    <ComboBox fx:id="statusComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1" prefWidth="200"/>
                </GridPane>

                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button fx:id="newButton" mnemonicParsing="false" onAction="#handleNewSeason" text="جديد" />
                        <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSaveSeason" text="حفظ" />
                        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeleteSeason" text="حذف" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
