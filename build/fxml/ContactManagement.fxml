<?xml version="1.0" encoding="UTF-8"?>

<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox styleClass="window-container" stylesheets="@../css/application.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="accounting.controller.ContactManagementController">
   <children>
      
      <!-- رأس النافذة -->
      <HBox styleClass="report-header" alignment="CENTER_LEFT">
         <children>
            <FontIcon iconLiteral="fa-users" iconSize="24" styleClass="text-primary" />
            <Label styleClass="title-lg" text="إدارة جهات التعامل" />
         </children>
      </HBox>
      
      <!-- جدول جهات التعامل -->
      <VBox styleClass="card" VBox.vgrow="ALWAYS">
         <children>
            <StackPane VBox.vgrow="ALWAYS">
               <children>
                  <TableView fx:id="contactTable" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                      <TableColumn fx:id="contactIdColumn" prefWidth="75.0" text="المعرف" />
                      <TableColumn fx:id="nameColumn" prefWidth="200.0" text="الاسم" />
                        <TableColumn fx:id="typeColumn" prefWidth="120.0" text="النوع" />
                        <TableColumn fx:id="phoneColumn" prefWidth="150.0" text="الهاتف" />
                        <TableColumn fx:id="addressColumn" prefWidth="250.0" text="العنوان" />
                    </columns>
                  </TableView>
                  <ProgressIndicator fx:id="progressIndicator" visible="false" />
               </children>
            </StackPane>
         </children>
      </VBox>
      
      <!-- أزرار العمليات -->
      <VBox styleClass="card">
         <children>
            <HBox alignment="CENTER_LEFT" styleClass="spacing-md">
               <children>
                  <Button fx:id="addButton" onAction="#handleAddContact" styleClass="success" text="إضافة">
                     <graphic>
                        <FontIcon iconLiteral="fa-plus" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="إضافة جهة تعامل جديدة" />
                     </tooltip>
                  </Button>
                  <Button fx:id="editButton" onAction="#handleEditContact" styleClass="warning" text="تعديل">
                     <graphic>
                        <FontIcon iconLiteral="fa-pencil" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="تعديل بيانات جهة التعامل المحددة" />
                     </tooltip>
                  </Button>
                  <Button fx:id="deleteButton" onAction="#handleDeleteContact" styleClass="danger" text="حذف">
                     <graphic>
                        <FontIcon iconLiteral="fa-trash" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="حذف جهة التعامل المحددة" />
                     </tooltip>
                  </Button>
                  <Button fx:id="viewStatementButton" onAction="#handleViewStatement" styleClass="primary" text="كشف حساب">
                     <graphic>
                        <FontIcon iconLiteral="fa-list-alt" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="عرض كشف حساب لجهة التعامل المحددة" />
                     </tooltip>
                  </Button>
                  <Button fx:id="newPaymentButton" onAction="#handleNewPayment" styleClass="secondary" text="سند صرف/قبض">
                     <graphic>
                        <FontIcon iconLiteral="fa-money" />
                     </graphic>
                     <tooltip>
                        <Tooltip text="تسجيل دفعة لجهة التعامل المحددة" />
                     </tooltip>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
      
   </children>
</VBox>
