<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox styleClass="stat-card" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="15.0">
         <children>
            <FontIcon fx:id="kpiIcon" iconLiteral="fa-question-circle" iconSize="28" styleClass="text-white" />
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="kpiTitleLabel" styleClass="stat-label" text="عنوان المؤشر" />
                  <Label fx:id="kpiValueLabel" styleClass="stat-value" text="0.00" />
               </children>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" spacing="5.0" style="-fx-padding: 5 0 0 0;">
         <children>
            <FontIcon fx:id="kpiChangeIcon" iconLiteral="fa-minus" iconSize="12" />
            <Label fx:id="kpiChangeLabel" styleClass="text-sm" text="0.0%" />
            <Label styleClass="text-sm text-muted" text="مقارنة بالشهر الماضي" />
         </children>
      </HBox>
   </children>
</VBox>
