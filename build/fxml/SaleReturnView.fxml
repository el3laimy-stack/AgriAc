<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="550.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="accounting.controller.SaleReturnController">
   <children>
      <VBox layoutX="175.0" layoutY="83.0" spacing="15.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <children>
            <Label text="تسجيل مرتجع مبيعات" styleClass="title">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <GridPane hgap="10.0" vgap="10.0">
               <children>
                  <Label text="فاتورة البيع الأصلية:" GridPane.rowIndex="0" />
                  <Label fx:id="saleInfoLabel" style="-fx-font-weight: bold;" text="..." GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  
                  <Label text="تاريخ المرتجع:" GridPane.rowIndex="1" />
                  <DatePicker fx:id="returnDatePicker" prefWidth="350.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                  <Label text="الكمية المرتجعة (كجم):" GridPane.rowIndex="2" />
                  <TextField fx:id="quantityField" promptText="أدخل الكمية بالكجم" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                  <Label text="سبب الإرجاع:" GridPane.rowIndex="3" />
                  <TextArea fx:id="reasonArea" prefHeight="80.0" promptText="(اختياري)" GridPane.columnIndex="1" GridPane.rowIndex="3" />
               </children>
            </GridPane>
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSave" text="حفظ المرتجع" />
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" styleClass="danger" text="إلغاء" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>